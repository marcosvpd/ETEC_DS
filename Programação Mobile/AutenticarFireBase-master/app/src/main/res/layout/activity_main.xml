<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email"
            android:layout_gravity="center"
            android:textAlignment="center" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:ems="10"
            tools:layout_editor_absoluteY="57dp" tools:layout_editor_absoluteX="40dp" android:id="@+id/txtEmail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Senha"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/lbSenha"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:ems="10"
            tools:layout_editor_absoluteY="177dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/txtPassw"/>

        <Button
            android:id="@+id/btnSingUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="263dp" />
        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"/>

        <Button
            android:id="@+id/btnLoggof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="145dp"
            android:text="sair" />

        <Button
            android:id="@+id/btnVerifyEmailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="Verificar Email" />
        <TextView
            android:text="Usuario Logado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/lbUsuarioLogado"/>
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/lbEmailDoUsuarioLogado"/>

        <TextView
            android:id="@+id/lbEmailValidoSera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="lbEmailValidoSera"
            tools:text="nao sei se o email e valido" />
        <Button
            android:text="Alterar senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="145dp"
            android:id="@+id/btnAlteraSenha"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtNovaSenha"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>